<html>
<body id="app">
  <%- include("partials/header") %>
  <div class="home">
    <div id="post-list">
      <% if(posts.length==0){ %>
        <h1>No posts available</h1>
      <% } %>
      <% posts.forEach(function(postData){ %>
          <%- include('partials/post', {post: postData}); %>
      <% }); %>
    </div>
    <div class= "create-container">
      <a class= "create-button" href="/newpost">
        Create post
      </a>
    </div>
  </div>
  <%- include('partials/footer')%>
</body>
</html>
